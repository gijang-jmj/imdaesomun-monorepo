{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    // basic
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // alias
    "baseUrl": ".",
    "paths": {
      "@imdaesomun/assets/*": ["packages/assets/src/*"],
      "@imdaesomun/shared/*": ["packages/shared/src/*"],
      "@/*": ["apps/web-vue/src/*"]
    },
  },
}
